package com.dxtwangxiao.strongestsuperscholar.module.question.dao;


import com.dxtwangxiao.strongestsuperscholar.module.question.entity.Question;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

/**
 * 题目表访问
 * @author shenhao
 */
@Repository
public interface QuestionRepository extends CrudRepository<Question, String> {

    /**
     * 根据试题id查询
     * @param questionId
     * @return 试题
     */
    Question findQuestionByQuestionId(String questionId);


    /**
     * 根据试题编码查询题目
     * @param questionNo
     * @return 试题
     */

    Question findQuestionsByQuestionNo(String questionNo);
    /**
     * 根据试题编号查询题目
     * @param questionCode
     * @return 试题
     */

    Question findQuestionsByQuestionCode(String questionCode);
    /**
     * 根据试题类型ID查询题目
     * @param questionTypeId
     * @return 试题
     */

    Question findQuestionsByQuestionTypeId(String questionTypeId);


    /**
     * 根据知识点编号查询题目
     * @param knowledgeId
     * @return 知识点
     */
    Question findQuestionsByKnowledgeId(String knowledgeId);



    /**
     * 获取所有题目
     * @return 包含所有题目的序列
     */
    List<Question> findAll();
    /**
     * 分页查询所有题目
     * @param pageable
     * @return
     */
    Page<Question> findAll(Pageable pageable);

    /**
     * 新增或者修改题目
     * @param question
     */
    Question save(Question question);






}
