@RunWith(SpringRunner.class)
@SpringBootTest
public class UserGPDetailRepositoryTest {

    @Autowired
    private UserGPDetailRepository userGPDetailRepository;

    @Test
    public void findByUserId() {
        String userId = "1";
        Pageable pageable = PageRequest.of(1, 1);
        Page<UserGPDetail> userGPDetailPage = userGPDetailRepository.findByUserId(userId, pageable);
        List<UserGPDetail> userGPDetailList = userGPDetailPage.getContent();
        assertNotEquals(0, userGPDetailList.size());

        userGPDetailList.forEach(System.out::println);
    }

    @Test
    public void findAll() {
        List<UserGPDetail> userGPDetailList = userGPDetailRepository.findAll();
        assertNotEquals(0, userGPDetailList.size());

        userGPDetailList.forEach(System.out::println);
    }

    @Test
    public void findAllByUserId() {
        String userId = "1";
        List<UserGPDetail> userGPDetailList = userGPDetailRepository.findAllByUserId(userId);
        assertNotEquals(0, userGPDetailList.size());

        userGPDetailList.forEach(System.out::println);
    }

    @Test
    public void save() {
        UserGPDetail userGPDetail = new UserGPDetail();
        userGPDetail.setUserGpDetailId("3");
        userGPDetail.setUserGpDetailNo("3");
        userGPDetail.setUserId("1");
        userGPDetail.setUserNo("1");
        userGPDetail.setCurrentAmount(100);

        UserGPDetail result = userGPDetailRepository.save(userGPDetail);
        assertNotNull(result);

        System.out.println(result);

    }
}