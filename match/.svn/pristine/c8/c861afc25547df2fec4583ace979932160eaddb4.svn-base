<script>
import wxs from "../../utils/wx";
import gradeDialog from "../../components/grade-dialog";
import { socketUrl } from "../../config";
export default {
  components: { gradeDialog },
  name: "index.vue",
  data() {
    return {
      userInfo: {},
      showGradeDialog: false, //是否显示年级选择弹窗
      socket: null,
      isGroup: false //是否是群内pk
    };
  },
  async onLoad() {
    try {
      if (await wxs.getStorage("notFirstLogin")) {
        console.log("不是首次登陆");
        // 非第一次登陆，直接获取用户信息
        await this.$store.dispatch("login");
        this.userInfo = this.$store.state.userInfo;
      }
    } catch (e) {
      //首次登陆选择年级信息
      wxs.setStorage("notFirstLogin", true);
      console.log("首次登陆");
      this.showGradeDialog = true;
    }
    wxs.showShareMenu(true);
  },
  onShareAppMessage(res) {
    let matchId = "001";
    let Path = "pages/friend-pk/main?matchId=001&isCreator=false";
    if (this.isGroup) {
      Path = "pages/group-battle-waiting/main?matchId=001&isCreator=false";
    }
    console.log("matchId:" + matchId);
    if (res.from === "button") {
    }
    return {
      title: this.userInfo.wechatName + "向你发出了智商pk，点击应战！",
      path: Path,
      success: res => {
        console.log("分享成功，本次对战编码为" + matchId);
        if (this.isGroup) {
          wxs.navigateTo(
            "../group-battle-waiting/main?matchId=001&isCreator=true"
          );
        } else {
          wxs.navigateTo("../friend-pk/main?matchId=001&isCreator=true");
        }
      },
      fail: e => {
        console.log("分享失败！" + e);
      }
    };
  },
  computed: {
    progress() {
      let progress =
        this.userInfo.experience / this.userInfo.upgradeExperience * 100;
      return progress;
    }
  },
  methods: {
    //监听年级选择是否结束
    //若结束将年级信息返回给后台同时获取到用户的登陆信息
    async getGradeInfoFromChild(data) {
      console.log("年级阶段：" + data.gradePhaseId + " 年级：" + data.gradeId);
      //data-就是用户选择的年级信息
      this.showGradeDialog = false;
      await this.$store.dispatch("firstLogin", { data: data });
      this.userInfo = this.$store.state.userInfo;
      console.log(
        "拿到的用户信息是:" + JSON.parse(JSON.stringify(this.userInfo))
      );
    },
    to_dualmeet: function() {
      wxs.navigateTo("../battle/main");
    },
    to_exercise: function() {
      wxs.navigateTo("../exercise-object-select/main");
    },
    to_pk: function() {
      wxs.navigateTo("../friend-pk/main");
    },
    to_rank: function() {
      wxs.navigateTo("../rank/main");
    },
    to_topup: function() {
      wxs.navigateTo("../topup/main");
    },
    to_goldMall: function() {
      wxs.navigateTo("../gold-mall/main");
    },
    to_groupBattle: function() {
      wxs.navigateTo("../group-battle-waiting/main");
    },
    to_personalCenter() {
      wxs.navigateTo("../personal-center/main");
    },
    change_group: function() {
      this.isGroup = true;
    },
    change_pk: function() {
      this.isGroup = false;
    }
  }
};
</script>

