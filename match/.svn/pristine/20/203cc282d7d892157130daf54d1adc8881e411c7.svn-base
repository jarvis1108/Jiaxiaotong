<script>
import wxs from "../../utils/wx";
export default {
  data() {
    return {
      waitOpponent: true, //是否处于等待状态
      isHost: true,
      hostInfo: {
        name: "",
        img: ""
      },
      opponent: {
        wechatName: "",
        headImage: "",
        externalLevel: 0,
        city: ""
      }, //好友信息
      hostname: "",
      fold: true,
      nums: 6,
      playerList: []
    };
  },
  computed:{
    //列表折叠、摊开动画效果
    'bgStyle'(){
      if(this.playerList.length > 5 && this.playerList.length <=10){
          return this.fold?'firstHide':'firstExtend';
      }else if(this.playerList.length > 10 && this.playerList.length <=15){
          return this.fold?'secondHide':'secondExtend';
      }else{
          return this.fold?'thirdHide':'thirdExtend';
      }
    }
  },
  async onLoad() {
    //TODO:从options参数中拿到战局Id
    let battleId = "002";
    //获取playList
    this.playerList = await this.$store.dispatch("getPlayerListByBattleId",battleId);
  },

  methods: {
    expand() {
      if (this.fold === true) {
        this.fold = false;
      } else if (this.fold === false) {
        this.fold = true;
      }
    },
    on_startBattle() {
      wxs.redirectTo(`../group-battle/main?playerList=${JSON.stringify(this.playerList)}&battleId=${this.battleId}`);
    }
  },
	onShareAppMessage(res) {
    let that = this;
    if (res.from === "button") {
      console.log(res.target);
    }
    return {
      title: this.user.wechatName + "向你发出了智商pk，点击应战！",
      path: `/pages/group-battle-waiting/main?${this.matchId}&isCreator=false`,
      complete() {
        let friend = {
          wechatName: "小王子",
          headImage: "/static/images/nick.jpg",
          externalLevel: 1,
          city: "青岛"
        };
        that.opponent = friend;
        that.waitOpponent = false;
      }
    };
  },
  created() {}
};
</script>

