/**
--效果：按钮放大出场动画
--参数：时间：0.5s
--使用场景：练兵场、对抗赛、结果页按钮出场
 */

@keyframes zoomOut {
  0% {
    transform: scale(0);
  }
  90% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes zoomOutDelay {
  0%,50% {
    transform: scale(0);
  }
  80% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
/**
--效果：题目卡片旋转切换动画
--参数：时间：0.8s
--使用场景：练兵场、对抗赛题目卡片切换
 */
@keyframes rotate {
  0%{
    transform: rotateY(0);
    opacity: 1;
  }
  40%{
    opacity: 0;
  }
  50%{
    transform: rotateY(180deg);
    opacity: 0;
  }
  60%{
    opacity: 0;
  }
  100%{
    transform: rotateY(360deg);
    opacity: 1;
  }
}

@keyframes rotateIn {
  0%{
    transform: rotateY(180deg);
    opacity: 0;
  }
  40%{
    opacity: 0;
  }
  100%{
    transform: rotateY(360deg);
    opacity: 1;
  }
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(15%);
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
@keyframes spinReverse {
  to {
    transform: rotate(-360deg);
  }
}
/**
--效果：用户栏从左侧滑入
--参数：时间：1s
--使用场景：对抗赛结果页、对抗赛页面、好友对战等待页面用户头像入场
 */

@keyframes slideFromLeft {
  from {
    transform: translateX(-100%);
  }
}

/**
--效果：用户对手栏从右侧滑入
--参数：时间：1s
--使用场景：对抗赛结果页、对抗赛页面、好友对战等待页面对手头像入场
 */
@keyframes slideFromRight {
  from {
    transform: translateX(100%);
  }
}

/**
--效果：logo由大变小再变大
--参数：时间：1s
--使用场景：对抗赛结果页logo入场
 */
@keyframes zoom {
  0% {
    transform: scale(5);
  }
  95% {
    transform: scale(0.8);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes zoomDelay {
  0%,
  50% {
    opacity: 0;
    transform: scale(5);
  }
  90% {
    transform: scale(0.6);
  }
  100% {
    transform: scale(1);
  }
}

/**
--效果：水波涟漪动画
--参数：时间：2s/重复：infinite
使用场景：好友对战等待页邀请按钮效果、对抗赛加载页效果（可能会应用）
 */
@keyframes wave {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(12);
    opacity: 0;
  }
}

/**
--效果列表逐层进入退出动画
使用场景：群比赛页面用户列表动画
*/
@keyframes slideIn {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }
}
@keyframes slideFromBottom {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes slideOut {
  to {
    transform: translateY(-20px);
    opacity: 0;
  }
}
@keyframes firstHide {
  from{
    height: 120px;
  }
  to {
    height: 60px;
  }
}
@keyframes secondHide {
  from{
    height: 180px;
  }
  to {
    height: 60px;
  }
}
@keyframes thirdHide {
  from{
    height: 240px;
  }
  to {
    height: 60px;
  }
}
@keyframes firstExtend {
  to {
    height: 120px;
  }
}
@keyframes secondExtend {
  to {
    height: 180px;
  }
}
@keyframes thirdExtend {
  to {
    height: 240px;
  }
}

@keyframes opacity {
  0%,50% {
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}

@keyframes slideFromLeftBottom {
  from {
    transform: translate(-100%, 100%);
  }
}
@keyframes slideFromRightTop {
  from {
    transform: translate(100%, -100%);
  }
}