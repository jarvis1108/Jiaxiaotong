<template>
  <div class="st-exercise-object-select-container">
    <div class="st-exercise-object-select-gradelist">
      <ul>
        <li @click="select(item,index)" 
            :class="{'select':gradeList[index].select,'unselect':!gradeList[index].select}" 
            v-for="item in gradeList" v-if="item.gradeName!=null" :key="item">
          {{item.gradeName}}
        </li>
        <li @click="select(item,index)" 
            :class="{'select':gradeList[index].select,'unselect':!gradeList[index].select}" 
            v-for="item in gradeList" v-if="item.gradeName==null" :key="item">
          {{item.gradePhaseName}}
        </li>
      </ul>
    </div>

    <div class="st-exercise-object-select-board">
      <div class="st-exercise-object-select-gradeicon-div">
        <img class="st-exercise-object-select-gradeicon" :src="selectGradeIconImage" />
      </div>

      <div class="st-exercise-object-select-objectlist">
			  <div class="st-exercise-object-select-flex-div">
          <!-- <div @click="selectObject(item)" :class="{'selectObject':item.select,'unselectObject':!item.select}" :style="'animation:'+ animation +' 1s'" class="st-exercise-object-select-box" v-for="item in gradeList[listIndex].objectList" :key="item"> -->
          <div @click="selectObject(item)" :class="{'selectObject':item.select,'unselectObject':!item.select}" :style="'animation:'+ animation +' 1s'" class="st-exercise-object-select-box" v-for="item in subjectList" :key="item">
            <div class="st-exercise-object-select-objectname-div">
              {{ item.subjectName }} 
            </div>
            <div :class="{'selectImage':item.select,'unselectImage':!item.select}" class="st-exercise-object-select-objectphoto-img-div">
            <img class="st-exercise-object-select-objectphoto-img" :src="item.photo"/>
            </div>
          </div>	
        </div>
      </div>

    </div>

  </div>
</template>
<script>
import wxs from "../../utils/wx";
export default {
  data() {
    return {
      gradeList: [
        {
          iconImage: "",
          select: false
        }
      ], //年级列表
      subjectList: [
        {
          photo: "",
          select: false
        }
      ], //科目列表
      selectGradeIconImage:
        "/static/images/exerciseObjectSelect/Gradeone_icon.png", //被选中的图标图片地址,默认为一年级对应的logo
      listIndex: 0,
      animation: "slideFromBottom" //科目滑入动画
    };
  },
  async onLoad() {
    this.gradeList = await this.$store.dispatch("getExerciseGradetList"); //返回年级列表
    console.log(this.gradeList);
    this.listIndex = 0;
    for (let i = 0; i < this.gradeList.length; ++i) {
      this.gradeList[i].iconImage =
        "/static/images/exerciseObjectSelect/Gradeone_icon.png";
      this.gradeList[i].select = false;
    }
    this.gradeList[this.listIndex].select = true;
    this.selectGradeIconImage = this.gradeList[this.listIndex].iconImage;
    if (this.gradeList[this.listIndex].gradePhaseName === "大学"||this.gradeList[this.listIndex].gradePhaseName === "高中") {
      this.subjectList = await this.$store.dispatch("getExercisesubjecttList", {
        gradePhaseId: this.gradeList[this.listIndex].gradePhaseId,
        gradeId: ""
      });
    } else {
      this.subjectList = await this.$store.dispatch("getExercisesubjecttList", {
        gradePhaseId: this.gradeList[this.listIndex].gradePhaseId,
        gradeId: this.gradeList[this.listIndex].gradeId
      });
    }
    for (let i = 0; i < this.subjectList.length; ++i) {
      this.subjectList[i].photo =
        "/static/images/exerciseObjectSelect/Chinese_icon.png";
      this.subjectList[i].select = false;
    }
  },
  watch: {
    listIndex() {
      //动画效果
      this.animation = "slideFromBottom";
      setTimeout(() => {
        this.animation = "";
      }, 1000);
    }
  },
  methods: {
    //选定年级
    async select(item, index) {
      this.gradeList.forEach(element => {
        element.select = false;
      });
      this.gradeList[index].select = true;
      this.selectGradeIconImage = this.gradeList[index].iconImage;
      this.listIndex = index;
      if (this.gradeList[this.listIndex].gradePhaseName === "大学"||this.gradeList[this.listIndex].gradePhaseName === "高中") {
      this.subjectList = await this.$store.dispatch("getExercisesubjecttList", {
        gradePhaseId: this.gradeList[this.listIndex].gradePhaseId,
        gradeId: ""
      });
    } else {
      this.subjectList = await this.$store.dispatch("getExercisesubjecttList", {
        gradePhaseId: this.gradeList[this.listIndex].gradePhaseId,
        gradeId: this.gradeList[this.listIndex].gradeId
      });
    }
      //根据年级id和年级阶段id获取科目列表
      for (let i = 0; i < this.subjectList.length; ++i) {
        this.subjectList[i].photo =
          "/static/images/exerciseObjectSelect/Chinese_icon.png";
        this.subjectList[i].select = false;
      }
    },
    //选定学科
    async selectObject(item) {
      this.subjectList.forEach(element => {
        element.select = false;
      });
      item.select = true;
      const res = await wxs.showModal({
        title: "确认",
        content: `您选择了"${
          item.subjectName
        }"`
      });
      if (res.confirm) {
        // wxs.navigateTo(`../exercise/main?objectNo=${item.objectId}`);
        wxs.navigateTo(`../exercise/main?subjectId=${item.subjectId}`);
      }
    }
  }
};
</script>
