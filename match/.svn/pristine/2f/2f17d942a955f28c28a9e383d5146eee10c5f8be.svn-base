@RunWith(SpringRunner.class)
@SpringBootTest
public class UserCoinDetailServiceTest {

    @Autowired
    private UserCoinDetailService userCoinDetailService;

    @Test
    public void getUserCoinDetailList() throws ErrorInfo {
        String userId = "1";
        List<UserCoinDetail> userCoinDetailList = userCoinDetailService.getUserCoinDetailList(userId, 2, 1);

        assertNotEquals(0, userCoinDetailList.size());
        userCoinDetailList.forEach(System.out::println);

    }

    @Test
    public void getAllUserCoinDetails() throws ErrorInfo {
        String userId = "1";
        List<UserCoinDetail> userCoinDetailList = userCoinDetailService.getAllUserCoinDetails(userId);

        assertNotEquals(0, userCoinDetailList.size());
        userCoinDetailList.forEach(System.out::println);
    }

    @Test
    public void create() throws ErrorInfo {
        UserCoinDetail userCoinDetail = new UserCoinDetail();
        userCoinDetail.setUserCoinDetailId("4");
        userCoinDetail.setUserCoinDetailNo("4");
        userCoinDetail.setUserId("1");
        userCoinDetail.setUserNo("1");
        userCoinDetail.setAcquiredAmount(100);

        UserCoinDetail result = userCoinDetailService.create(userCoinDetail);
        assertNotNull(result);

        System.out.println(result);
    }
