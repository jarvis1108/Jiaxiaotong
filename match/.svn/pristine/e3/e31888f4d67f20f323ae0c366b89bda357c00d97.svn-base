package com.dxtwangxiao.strongestsuperscholar.module.community.dao;

import com.dxtwangxiao.strongestsuperscholar.module.community.entity.CommunityRole;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.test.context.junit4.SpringRunner;

import java.util.List;

import static org.junit.Assert.*;
@RunWith(SpringRunner.class)
@SpringBootTest
public class CommunityRoleRepositoryTest {

    @Autowired
    private CommunityRoleRepository roleRepository;

    @Test
    public void findAll() {
        PageRequest pageable=PageRequest.of(0,1);
        Page<CommunityRole> communityRolesPage=roleRepository.findAll(pageable);

        List<CommunityRole> communityRoles=communityRolesPage.getContent();
        assertNotEquals(0,communityRoles.size());

        communityRoles.forEach(System.out::println);
    }

    @Test
    public void findAll1() {
        List<CommunityRole> communityRoles=roleRepository.findAll();
        assertNotEquals(0,communityRoles.size());

        communityRoles.forEach(System.out::println);
    }
    @Test
    public void save() {
        CommunityRole communityRole=new CommunityRole();
        communityRole.setCommunityRoleId("123");
        communityRole.setCommunityRoleName("kevin");
        CommunityRole result=roleRepository.save(communityRole);
        assertNotNull(result);
        System.out.println(result);
    }

    @Test
    public void findByCommunityRoleId() {
        String communityRoleId="123";
        CommunityRole communityRole=roleRepository.findByCommunityRoleId(communityRoleId);
        assertNotNull(communityRole);
        System.out.println(communityRole);
    }



    @Test
    public void deleteByCommunityRoleId() {
        String communityRoleId="234";
        roleRepository.deleteByCommunityRoleId(communityRoleId);
    }
}