@RunWith(SpringRunner.class)
@SpringBootTest
public class UserLPDetailRepositoryTest {

    @Autowired
    private UserLPDetailRepository userLPDetailRepository;

    @Test
    public void findByUserId() {
        String userId = "1";
        Pageable pageable = PageRequest.of(1, 1);
        Page<UserLPDetail> userLPDetailPage = userLPDetailRepository.findByUserId(userId, pageable);
        List<UserLPDetail> userLPDetailList = userLPDetailPage.getContent();
        assertNotEquals(0, userLPDetailList.size());

        userLPDetailList.forEach(System.out::println);
    }

    @Test
    public void findAll() {
        List<UserLPDetail> userLPDetailList = userLPDetailRepository.findAll();
        assertNotEquals(0, userLPDetailList.size());

        userLPDetailList.forEach(System.out::println);
    }

    @Test
    public void findAllByUserId() {
        String userId = "1";
        List<UserLPDetail> userLPDetailList = userLPDetailRepository.findAllByUserId(userId);
        assertNotEquals(0, userLPDetailList.size());

        userLPDetailList.forEach(System.out::println);
    }

    @Test
    public void save() {
        UserLPDetail userLPDetail = new UserLPDetail();
        userLPDetail.setUserLpDetailId("3");
        userLPDetail.setUserLpDetailNo("3");
        userLPDetail.setUserId("1");
        userLPDetail.setUserNo("1");
        userLPDetail.setCurrentAmount(100);

        UserLPDetail result = userLPDetailRepository.save(userLPDetail);
        assertNotNull(result);

        System.out.println(result);

    }
}