@SpringBootTest
@RunWith(SpringRunner.class)
public class OrderRecordRepositoryTest {

    @Autowired
    private OrderRecordRepository orderRecordRepository;

    @Test
    public void findAll() {
        PageRequest pageable = PageRequest.of(1,1);
        Page<OrderRecord> orderRecordPage = orderRecordRepository.findAll(pageable);

        List<OrderRecord> orderRecordList = orderRecordPage.getContent();
        assertEquals(0,orderRecordList.size());
        orderRecordList.forEach(System.out::println);
    }

    @Test
    public void findAll1() {
        List<OrderRecord> orderRecordList = orderRecordRepository.findAll();
        assertNotEquals(1, orderRecordList.size());

        orderRecordList.forEach(System.out::println);
    }

    @Test
    public void finAllByUserId(){
        String userId="1";
        List<OrderRecord> orderRecord=orderRecordRepository.findAllByUserId(userId);
        assertNotNull(orderRecord);
        System.out.println(orderRecord);
    }
