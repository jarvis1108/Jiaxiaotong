package com.dxtwangxiao.strongestsuperscholar.module.base.dao;

import com.dxtwangxiao.strongestsuperscholar.module.base.entity.GradeInfo;
import org.springframework.data.repository.PagingAndSortingRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

/**
 * 年级信息 数据访问层
 * <p>
 * Created by shenhao
 * 2018\7\13 0013
 */
@Repository
public interface GradeInfoRepository extends PagingAndSortingRepository<GradeInfo, String> {

    /**
     * 查询所有年级基本信息
     *
     * @return 年级基本信息列表
     */
    List<GradeInfo> findAll();

    /**
     * 保存或者更新年级基本信息
     *
     * @param gradeInfo 年级基本信息实体类对象
     * @return 新创建或者修改后的对象信息
     */
    GradeInfo save(GradeInfo gradeInfo);

    /**
     * 根据年级id得到年级信息
     *
     * @param gradeId 年级id
     * @return 年级信息
     */
    GradeInfo findByGradeId(String gradeId);
}
