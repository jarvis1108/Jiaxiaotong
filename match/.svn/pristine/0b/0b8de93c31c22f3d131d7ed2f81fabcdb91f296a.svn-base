<template>
 <!-- 设置界面 -->
 <div class="payTip">
    <div class="dialog-mask"></div>
    <!-- <img @click="closeDialog" class="st-setting-dialog-close-icon" src="/static/images/settingDialog/close_icon@2x.png"/> -->
  
    <img class="st-setting-dialog-bg" src="/static/images/payTip/Springwindow_bg.png"/>
    <div v-if="index % 3 === 0" class="st-setting-dialog-icon-div" id="blue">
      <img class="st-setting-dialog-icon-img" :src="product.productImage"/>
    </div>
    <div v-else-if="index % 3 === 1" class="st-setting-dialog-icon-div" id="green">
      <img class="st-setting-dialog-icon-img" :src="product.productImage"/>
    </div>
    <div v-else class="st-setting-dialog-icon-div" id="cyan">
      <img class="st-setting-dialog-icon-img" :src="product.productImage"/>
    </div>
    <img @click="closeDialog" class="st-setting-dialog-close-icon" src="/static/images/payTip/Close_1_icon.png"/>
    <div class="st-setting-dialog-line">{{product.productName}}</div>
    <!-- <span class="st-setting-dialog-setup-text">购买后，可获得一整个月的学点，方便学习。</span> -->
    <span class="st-setting-dialog-setup-text">{{product.productDesc}}</span>
  
    <button class="st-setting-dialog-button" @click="to_payPage" >确认购买</button>
 </div>
</template>

<script>
import wxs, { showSuccess } from "../utils/wx";
export default {
  props: ["ProId", "ProName", "ProPrice", "product", "paymentType", "index"],
  data() {
    return {
      productObj: {
        productId: this.ProId,
        productName: this.ProName,
        productPrice: this.ProPrice
      }
    };
  },
  methods: {
    //关闭设置窗口
    closeDialog() {
      //告知父组件关闭当前设置弹窗
      this.$emit("listenCloseDialog");
    },
    async to_payPage() {
      if (this.paymentType === 0) {
        //充值，跳转至支付页面
        wxs.navigateTo(
          "../pay/main?productObj=" + JSON.stringify(this.productObj)
        );
      } else {
        //金币商城，调用兑换接口
        //1、先进行简单判断是否可以购买
        if (this.$store.state.userInfo.coin < this.product.productPrice) {
          wxs.showTip("您的金币不足");
        } else {
          let isSuccess = await this.$store.dispatch("exchangeGold", {
            productId: this.product.productId,
            amount: 1 //商品数量，默认为1
          });
          if (isSuccess) wxs.showSuccess("兑换成功");
          else wxs.showTip("兑换失败");
          this.closeDialog();
        }
      }
    }
  }
};
</script>

