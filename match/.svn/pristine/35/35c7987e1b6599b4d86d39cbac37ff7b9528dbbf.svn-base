        couponDetail.setEndTime(Timestamp.valueOf("2018-07-05 12:12:12"));
        couponDetail.setOrderRecordId("1");
        couponDetail.setUserId("1");
        couponDetail.setCreateTime(Timestamp.valueOf("2018-07-05 12:12:12"));
        couponDetail.setCreateUser("1");
        couponDetail.setIsValid(Byte.valueOf("1"));
        couponDetail.setLastUpdTime(Timestamp.valueOf("2018-07-06 12:12:12"));
        couponDetail.setLastUpdUser("test");
        couponDetail.setRemark("test");

        CouponDetail result = couponDetailRepository.save(couponDetail);
        assertNotNull(result);
