    @Test
    public void findAll() {
        PageRequest pageable = PageRequest.of(1,1);
        Page<CouponDetail> couponDetailPage = couponDetailRepository.findAll(pageable);

        List<CouponDetail> couponDetailList = couponDetailPage.getContent();
        assertEquals(0,couponDetailList.size());
        couponDetailList.forEach(System.out::println);
