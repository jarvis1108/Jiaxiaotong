        <span id="giveup-text">放弃</span>
      </div>
      <div id="invite-div">
        <button @click="on_invite" :open-type="isShareable" class="invite">
          <img src="/static/images/friendPk/Invitation_icon@2x.png" class="invite_img"/>
        </button>
        <span id="invite-text">邀请</span>
      </div>
    </div>

    <img v-if="!waitOpponent" @click="on_beginBattle" class="startBtn" src="/static/images/friendPk/Startfighting_btn@2x.png"/>
  </div>
</template>

<script>
import wxs from "../../utils/wx";
export default {
  wechatName: "index.vue",
  data() {
    return {
      matchId: "", //战局标识ID
      timeOut: false, //监控倒计时
      waitOpponent: true, //是否处于等待状态
      interval: null,
      minute: "",
      second: "",
      user: {
        wechatName: "",
        headImage: "",
        externalLevel: 16,
        city: "十堰"
      }, //用户信息
      opponent: {
        wechatName: "",
        headImage: "",
        externalLevel: 0,
        city: ""
      }, //好友信息
      isUser: true //true-发起者，false-挑战者
    };
  },
  async onLoad(options) {
    //TODO:改状态可能需要发消息给后台确认
    this.waitOpponent = true;

    //检查用户是否是被邀请进入
    this.isUser = options.isCreator === "true" ? true : false;
    this.matchId = options.matchId;
    console.log(`是否是创建者:${this.isUser},
      战局编码是${this.matchId}`);

    // 获取用户信息
    try {
      let user = await this.$store.dispatch("getUserInfo");
      console.log(user);
      this.user.wechatName = user.nickName;
      this.user.headImage = user.avatarUrl;
    } catch (e) {
      console.log(e);
    }

    wxs.showShareMenu(true);
  },
  onShow() {
    //每次进入页面状态重置
    clearInterval(this.interval);
    this.minute = "09";
    this.second = "59";
    this.timeOut = false;
    this.setClock();
  },
  watch: {
    timeOut() {
      if (this.timeOut) {
        wxs.navigateBack(0);
      }
    }
  },
  computed: {
    userIndex() {
      return this.isUser ? 1 : -1;
    },
    opponentIndex() {
      return this.isUser ? -1 : 1;
    },
    isShareable() {
      return this.waitOpponent ? "share" : "";
    }
  },
  methods: {
    setClock() {
      this.interval = setInterval(() => {
        if (parseInt(this.second) > 10) {
          this.second = parseFloat(this.second) - 1;
        } else if (parseInt(this.second) > 0) {
          this.second = "0" + (parseFloat(this.second) - 1);
        } else if (parseInt(this.minute) > 0) {
          this.minute = "0" + (parseInt(this.minute) - 1);
          this.second = "59";
        } else {
          this.timeOut = true;
        }
      }, 1000);
    },
    on_giveUp() {
      wxs.navigateBack(0);
    },
    on_beginBattle() {
      wxs.navigateTo(
        `../battle-ready/main?userInfo=${JSON.stringify(
          this.user
        )}&opponentInfo=${JSON.stringify(this.opponent)}&type=1`
      );
    }
  },
  onShareAppMessage(res) {
    let that = this;
    if (res.from === "button") {
      console.log(res.target);
    }
    return {
      title: this.user.wechatName + "向你发出了智商pk，点击应战！",
      path: `/pages/friend-pk/main?${this.matchId}&isCreator=false`,
      complete() {
        let friend = {
          wechatName: "小王子",
          headImage: "/static/images/nick.jpg",
          externalLevel: 1,
          city: "青岛"
        };
        that.opponent = friend;
        that.waitOpponent = false;
      }
    };
  }
};
</script>

