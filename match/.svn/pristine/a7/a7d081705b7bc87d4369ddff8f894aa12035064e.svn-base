        <div class="opponent-inner">
          <div id="opponent-outer-frame">
            <img id="opponent-outer-frame-img" src="/static/images/friendPk/Answerprogresscircle@2x.png"/>
          </div>
        </div>
        <img id="opponentIcon" v-if="!waitOpponent" :src="opponent.headImage"/>
        <span id="opponentName" v-if="!waitOpponent">{{opponent.wechatName}}</span>
        <div class="opponent-label">
          <span class="opponent-label-text" v-if="!waitOpponent && isUser">挑&nbsp;战&nbsp;者</span>
          <span class="opponent-label-text" v-if="!waitOpponent && !isUser">发&nbsp;起&nbsp;者</span>
          <img v-if="isUser" class="opponent-label-img" src="/static/images/friendPk/Scorethelabel2@2x.png"/>
          <img v-if="!isUser" class="opponent-label-img" id="isNotOpponent" src="/static/images/friendPk/Scorethelabel1@2x.png"/>
        </div>
      </div>
