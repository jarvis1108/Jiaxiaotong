package com.dxtwangxiao.strongestsuperscholar.module.community.service.impl;

import com.dxtwangxiao.strongestsuperscholar.module.community.entity.SpecialTraining;
import com.dxtwangxiao.strongestsuperscholar.module.community.service.SpecialTrainingService;
import com.dxtwangxiao.strongestsuperscholar.web.vo.ErrorInfo;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.junit4.SpringRunner;

import java.util.List;

import static org.junit.Assert.*;
@RunWith(SpringRunner.class)
@SpringBootTest
public class SpecialTrainingServiceImplTest {

    @Autowired
    private SpecialTrainingService service;
    @Test
    public void create() throws  ErrorInfo{
        SpecialTraining specialTraining=new SpecialTraining();
        specialTraining.setUserId("1");
        specialTraining.setSpecialTrainingId("456");
        specialTraining.setSpecialTrainingName("ds");
        SpecialTraining result=service.create(specialTraining);
        assertNotNull(result);
        System.out.println(result);
    }

    @Test
    public void findAll() throws  ErrorInfo{
        List<SpecialTraining> specialTrainings=service.findAll();
        assertNotEquals(0, specialTrainings.size());
        specialTrainings.forEach(System.out::println);
    }

    @Test
    public void findAll1()throws  ErrorInfo {
        List<SpecialTraining> specialTrainings=service.findAll(1,1);
        assertNotEquals(0, specialTrainings.size());
        specialTrainings.forEach(System.out::println);
    }

    @Test
    public void findById() throws  ErrorInfo{
        String specialTrainingId="234";
        SpecialTraining specialTraining=service.findById(specialTrainingId);
        assertNotNull(specialTraining);
        System.out.println(specialTrainingId);
    }

    @Test
    public void updateById()throws  ErrorInfo {
        SpecialTraining specialTraining=new SpecialTraining();
        specialTraining.setSpecialTrainingId("456");
        specialTraining.setSpecialTrainingName("de");
        SpecialTraining result=service.update(specialTraining);
        assertNotNull(result);
        System.out.println(result);
    }

    @Test
    public void deleteById()throws  ErrorInfo {
        String  specialTrainingId="12";
        service.deleteById(specialTrainingId);
    }

    @Test
    public void finAllByUserId() throws ErrorInfo {
        String userId="1";
        List<SpecialTraining> specialTrainings = service.getSpecialTrainingUserInfo(userId);
        assertNotNull(specialTrainings);
        System.out.println(specialTrainings);
    }
}