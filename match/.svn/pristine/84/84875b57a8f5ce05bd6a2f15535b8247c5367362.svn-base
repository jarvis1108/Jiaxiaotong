<template>
  <div>
    <img id="bg" src="/static/images/bg@2x.png"/>
    <img class="winImg" v-if="win" src="/static/images/battleResult/Challengesuccess@2x.png"/>
    <img class="winImg" v-if="!win" src="/static/images/battleResult/Challengefailure@2x.png"/>

    <div class="info">
      <div id="user" :style="'width:'+ userWidth+'%'">
        <img id="userIcon" :src="user.icon"/>
        <span id="userName">{{user.name}}</span>
        <span id="userAnswerNum" style="font-weight: bold;">答对{{userAnswerNum}}题</span>
        <div class="mark" id="userMark">
          <span>{{animatedUserMark}}</span>
          <span style="font-size: 16px">分</span>
          <div><span class="flag">—</span></div>
        </div>
      </div>
      <div id="opponent" :style="'width:'+opponentWidth+'%'">
        <img id="opponentIcon" :src="opponent.icon"/>
        <span id="opponentName">{{opponent.name}}</span>
        <span id="opponentAnswerNum" style="font-weight: bold;">答对{{opponentAnswerNum}}题</span>
        <div class="mark" id="opponentMark">
          <span>{{animatedOpponentMark}}</span>
          <span style="font-size: 18px">分</span>
          <div><span class="flag">—</span></div>
        </div>
      </div>
    </div>

    <div class="table">
      <div style="display: table-row">
        <div style="display: table-cell;width: 50%">金币：</div>
        <div style="display: table-cell;width: 50%">+{{coin}}</div>
      </div>
      <div style="display: table-row">
        <div style="display: table-cell;width: 50%">绩点：</div>
        <div style="display: table-cell;width: 50%">+{{gpa}}</div>
      </div>
      <div style="display: table-row">
        <div style="display: table-cell;width: 50%">学点：</div>
        <div style="display: table-cell;width: 50%">-{{lp}}</div>
      </div>
      <div style="display: table-row">
        <div style="display: table-cell;width: 50%">经验：</div>
        <div style="display: table-cell;width: 50%">+{{experience}}</div>
      </div>
    </div>

    <img @click="on_continue" class="btn" id="continue" src="/static/images/battleResult/1.1Continue-btn@2x.png"/>
    <button v-if="win" class="btn" id="showoff" open-type="share">
      <img class="btn_img" src="/static/images/battleResult/1.1Showoff-btn@2x.png"/>
    </button>
    <button v-if="!win" class="btn" id="share" open-type="share">
      <img class="btn_img" src="/static/images/battleResult/Shareresults-btn@2x.png"/>
    </button>
    <span id="tip">分享到微信群可获得50金币奖励</span>

  </div>
</template>
<script>
import { TweenLite } from "../../assests/js/TweenMax.min";
import wxs from "../../utils/wx";

export default {
  name: "result",
  data() {
    return {
      type: 0, //进入类型，0-对抗赛，1-好友对抗
      win: false, //是否胜利
      user: {
        //用户信息
        icon: "",
        name: "",
        mark: 0,
        num: 0
      },
      opponent: {
        //对手信息
        icon: "",
        name: "",
        mark: 0,
        num: 0
      },
      coin: 0, //金币
      gpa: 0, //绩点
      lp: 0, //学点
      experience: 0, //经验

      aUserMark: 0, //用户分数--动画
      userMark: 0,
      opponentMark: 0,
      aOpponentMark: 0
    };
  },
  methods: {
    on_continue: function() {
      if (this.type === 0) {
        //TODO：切换至匹配页
        wxs.redirectTo("../battle/main");
      } else {
        wxs.navigateBack(0);
      }
    }
  },
  computed: {
    userWidth() {
      return this.win ? 59 : 39;
    },
    opponentWidth() {
      return this.win ? 39 : 59;
    },
    animatedUserMark() {
      return this.aUserMark.toFixed(0);
    },
    animatedOpponentMark() {
      return this.aOpponentMark.toFixed(0);
    },
    userAnswerNum() {
      switch (this.user.num) {
        case 0:
          return "零";
        case 1:
          return "一";
        case 2:
          return "二";
        case 3:
          return "三";
        case 4:
          return "四";
        case 5:
          return "五";
      }
    },
    opponentAnswerNum() {
      switch (this.opponent.num) {
        case 0:
          return "零";
        case 1:
          return "一";
        case 2:
          return "二";
        case 3:
          return "三";
        case 4:
          return "四";
        case 5:
          return "五";
      }
    }
  },
  watch: {
    userMark(newVal) {
      TweenLite.to(this.$data, 1.5, { aUserMark: newVal, delay: 0.5 });
    },
    opponentMark(newVal) {
      TweenLite.to(this.$data, 1.5, { aOpponentMark: newVal, delay: 0.5 });
    }
  },
  async onLoad(option) {
    if (option.type) {
      this.type = parseInt(option.type);
    } else {
      this.type = 0;
    }
    let resultData = await this.$store.dispatch("getResultInfo",option.battleId);
    this.win = resultData.win;
    this.user = resultData.user;
    this.opponent = resultData.opponent;
    this.coin = resultData.coin;
    this.gpa = resultData.gpa;
    this.lp = resultData.lp;
    this.experience = resultData.experience;
    this.userMark = this.user.mark;
    this.opponentMark = this.opponent.mark;
    wxs.showShareMenu(true);
  },
  onShareAppMessage() {
    return {
      title: "我的记录在此，谁敢来比，输了的发红包",
      path: "/page/index/main"
    };
  }
};
</script>
