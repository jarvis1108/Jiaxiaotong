@RunWith(SpringRunner.class)
@SpringBootTest
public class MatchSettingRepositoryTest {

    @Autowired
    private MatchSettingRepository matchSettingRepository;

    @Test
    public void findAll() {
        List<MatchSetting> matchSettingList = matchSettingRepository.findAll();
        assertNotEquals(0, matchSettingList.size());

        matchSettingList.forEach(System.out::println);
    }

    @Test
    public void findMatchSettingByMatchSettingId() {
        String matchSettingId = "1";
        MatchSetting matchSetting = matchSettingRepository.findMatchSettingByMatchSettingId(matchSettingId);

        assertNotNull(matchSetting);
        System.out.println(matchSetting);
    }

    @Test
    public void save() {
        MatchSetting matchSetting = new MatchSetting();
        matchSetting.setMatchSettingId("3");
        matchSetting.setMaxMatchCount(2);
        matchSetting.setMatchTime(10);

        MatchSetting result = matchSettingRepository.save(matchSetting);
        assertNotNull(result);
        System.out.println(result);
    }

    @Test
    public void findAll1() {
        Pageable pageable = PageRequest.of(1, 1);
        Page<MatchSetting> matchSettingPage = matchSettingRepository.findAll(pageable);

        List<MatchSetting> matchSettingList = matchSettingPage.getContent();
        assertNotEquals(0, matchSettingList.size());
        matchSettingList.forEach(System.out::println);

    }
}