 */
public interface UserSelectedCourseService {
    /**
     * 获取所有用户课程选择列表
     * @return
     */
    List<UserSelectedCourse> findAll();

    /**
     * 创建用户课程选择表
     * @param newUserSelectedCourse
     * @return
     * @throws ErrorInfo
     */
    UserSelectedCourse create(UserSelectedCourse newUserSelectedCourse) throws ErrorInfo;

    /**
     * 更新用户课程选择列表
     * @param updatedUserSelectedCourse
     * @return
     * @throws ErrorInfo
     */
    UserSelectedCourse update(UserSelectedCourse updatedUserSelectedCourse) throws ErrorInfo;

    /**
     * 根据userSelectedId删除用户课程选择表
     * @param userSelectedId
     * @return
     * @throws ErrorInfo
     */
    boolean deleteByUserSelectedId(String userSelectedId) throws ErrorInfo;

    /**
