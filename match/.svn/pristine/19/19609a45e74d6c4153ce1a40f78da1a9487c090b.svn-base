          <img v-if="isCreator" class="user-label-img" src="/static/images/friendPk/Scorethelabel1.png"/>
          <img v-if="!isCreator" class="user-label-img" id="isNotUser" src="/static/images/friendPk/Scorethelabel2.png"/>
          <span v-if="isCreator" class="user-label-text">发&nbsp;起&nbsp;者</span>
          <span v-if="!isCreator" class="user-label-text">挑&nbsp;战&nbsp;者</span>
        </div>
      </div>

      <div id="friend" :style="'z-index:'+opponentIndex">
        <img class="headImage-frame" src="/static/images/friendPk/Pictureframe.png"/>
        <img class="outer-frame-bg" src="/static/images/friendPk/Answerprogresscircle-bg.png"/>
        <div class="friend-inner">
          <div id="friend-outer-frame">
            <img id="friend-outer-frame-img" src="/static/images/friendPk/Answerprogresscircle.png"/>
          </div>
        </div>
        <img id="opponentIcon" v-if="!waitFriend" :src="friend.headImage"/>
        <span id="opponentName" v-if="!waitFriend">{{friend.wechatName}}</span>
        <div class="friend-label">
          <span class="friend-label-text" v-if="!waitFriend && isCreator">挑&nbsp;战&nbsp;者</span>
          <span class="friend-label-text" v-if="!waitFriend && !isCreator">发&nbsp;起&nbsp;者</span>
          <img v-if="isCreator" class="friend-label-img" src="/static/images/friendPk/Scorethelabel2.png"/>
          <img v-if="!isCreator" class="friend-label-img" id="isNotOpponent" src="/static/images/friendPk/Scorethelabel1.png"/>
        </div>
      </div>
    </div>

    <img id="clock-headImage" src="/static/images/friendPk/Clock_icon.png"/>
    <span id="time">{{minute}}:{{second}}</span>
    <span class="desc" v-if="waitFriend">等待对手加入....</span>
    <span class="desc" v-if="!waitFriend">等待比赛开始....</span>

    <div id="icons">
      <div id="giveup-div">
        <img @click="on_giveUp" class="giveUp" src="/static/images/friendPk/Giveup_icon.png"/>
        <span id="giveup-text">放弃</span>
      </div>
      <div id="invite-div">
        <button :open-type="isShareable" class="invite">
          <img src="/static/images/friendPk/Invitation_icon.png" class="invite_img"/>
        </button>
        <span id="invite-text">邀请</span>
      </div>
    </div>

    <img v-if="!waitFriend && isCreator" @click="on_beginBattle" class="startBtn" src="/static/images/friendPk/Startfighting_btn.png"/>
  </div>
</template>

<script>
import wxs from "../utils/wx";
export default {
  props: {
    user: {
      type: Object,
      required: true
    },
    friend: {
      type: Object,
      required: true
    },
    isCreator: {
      type:Boolean,
      required: true
    },
    waitFriend:{
      type:Boolean,
      required:true
    },
    matchId:{
      type:String,
      required:true
    }
  },
  data() {
    return {
      timeOut: false, //监控倒计时
      interval: null,
      minute: "",
      second: ""
    };
  },
  onLoad() {
    wxs.showShareMenu(true);
    console.log(this.friend);
  },
  created() {
    //每次进入页面状态重置
    clearInterval(this.interval);
    this.minute = "09";
    this.second = "59";
    this.timeOut = false;
    this.setClock();
  },
  watch: {
    timeOut() {
      if (this.timeOut) {
        clearInterval(this.interval);
        this.$emit("waitTimeOut");
      }
    }
  },
  computed: {
    //用户完善样式，决定图片重叠关系
    userIndex() {
      return this.isCreator ? 1 : -1;
    },
    opponentIndex() {
      return this.isCreator ? -1 : 1;
    },
    //若好友已进入，则无法再进行邀请
    isShareable() {
      //好友未进入且战局已创建则可以分享，否则不能分享
      return this.waitFriend && this.matchId.length > 0? "share" : "";
    }
  },
  methods: {
    //倒计时样式控制
    setClock() {
      this.interval = setInterval(() => {
        if (parseInt(this.second) > 10) {
          this.second = parseFloat(this.second) - 1;
        } else if (parseInt(this.second) > 0) {
          this.second = "0" + (parseFloat(this.second) - 1);
        } else if (parseInt(this.minute) > 0) {
          this.minute = "0" + (parseInt(this.minute) - 1);
          this.second = "59";
        } else {
          this.timeOut = true;
        }
      }, 1000);
    },
    //用户放弃战局
    on_giveUp() {
      if (this.isCreator) clearInterval(this.interval);
      this.$emit("giveUpBattle");
    },
    on_beginBattle() {
      clearInterval(this.interval);
      this.$emit("beginBattle");
    },
  }
};
</script>

