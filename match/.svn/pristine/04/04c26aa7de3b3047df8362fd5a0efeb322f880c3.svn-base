@RunWith(SpringRunner.class)
@SpringBootTest
public class AdminPurviewServiceTest {

    @Autowired
    private AdminPurviewService adminPurviewService;

    @Test
    public void getAdminPurviewList() {
        List<AdminPurview> adminPurviewList = adminPurviewService.getAdminPurviewList();
        assertNotEquals(0, adminPurviewList.size());

        adminPurviewList.forEach(System.out::println);
    }

    @Test
    public void getAdminPurviewList1() {
        List<AdminPurview> adminPurviewList = adminPurviewService.getAdminPurviewList(2, 1);
        assertNotEquals(0, adminPurviewList.size());

        adminPurviewList.forEach(System.out::println);
    }

    @Test
    public void create() throws ErrorInfo {
        AdminPurview adminPurview = new AdminPurview();
        adminPurview.setAdminPurviewId("4");
        adminPurview.setAdminId("4");
        adminPurview.setAdminNo("4");
        adminPurview.setAdminRoleId("4");
        adminPurview.setAdminRoleNo("4");

        AdminPurview result = adminPurviewService.create(adminPurview);
        assertNotNull(result);

        System.out.println(result);
    }

    @Test
    public void update() throws ErrorInfo {
        AdminPurview adminPurview = new AdminPurview();
        adminPurview.setAdminPurviewId("4");
        adminPurview.setAdminId("4");
        adminPurview.setAdminNo("4");
        adminPurview.setAdminRoleId("3");
        adminPurview.setAdminRoleNo("3");

        AdminPurview result = adminPurviewService.update(adminPurview);
        assertNotNull(result);

        System.out.println(result);
    }

    @Test
    public void deleteByAdminPurviewId() throws ErrorInfo {
        String adminPurViewId = "4";
        boolean result = adminPurviewService.deleteByAdminPurviewId(adminPurViewId);

        assertTrue(result);
    }
}