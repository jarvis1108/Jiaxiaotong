package com.dxtwangxiao.strongestsuperscholar.module.system.dao;

import com.dxtwangxiao.strongestsuperscholar.module.system.entity.UserLPDetail;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

/**
 * 用户学点流水明细数据访问层
 * <p>
 * Created by Devin
 * 2018-06-25 下午 03:16
 */
@Repository
public interface UserLPDetailRepository extends CrudRepository<UserLPDetail, String> {
    /**
     *获取所有用户学点流水明细列表
     * @return
     */
    List<UserLPDetail> findAll();

    /**
     *根据用户ID获取所有用户学点流水明细列表
     * @param userId
     * @return
     */
    List<UserLPDetail> findAllByUserId(String userId);

    /**
     * 创建、更新用户学点流水明细表
     * @param userLPDetail
     * @return
     */
    UserLPDetail save(UserLPDetail userLPDetail);

    /**
     * 分页查询所有用户学点流水明细列表
     * @param userId
     * @param pageable
     * @return
     */
    @Query("select u from UserLPDetail u where u.userId = ?1")
    Page<UserLPDetail> findByUserId(String userId, Pageable pageable);

    /**
     * 根据用户ID查询单个用户学点流水明细表
     * @param userId
     * @return
     */
    UserLPDetail findByUserId(String userId);
}

